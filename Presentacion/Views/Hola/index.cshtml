
@{
    ViewBag.Title = "index";
}

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.1.min.js"></script>

<h2>index</h2>

<div class="panel panel-primary" >
    
    <div class="panel-heading">Búsqueda</div>
    
    <div class="panel-body">
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "Get" }))
        {
            <div class="row">

                <div class="col-xs-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-addon"><b>Descripcion Corta</b></span>
                        @Html.TextBox("hola", null, new { @class = "form-control input-sm" })
                    </div>
                </div>


                <div class="col-xs-3">
                    <input type="submit" class="btn btn-default btn-sm pull-left" value="Buscar" />
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $('#form0').submit(function (e) {
            e.preventDefault();
            alert(123);

            $.ajax({
                data: $(this).serialize(),
                type: $(this).attr('method'),
                url: "Hola/mundo",
                success: function (result) {
                    alert(result.hola);
                }
            });
            



        });
    });

</script>